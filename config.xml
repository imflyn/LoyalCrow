<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flyn.loyalcrow" version="1.0.0">
    <name>Crow</name>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <icon src="config/android/res/drawable-ldpi/icon.png" density="ldpi"/>
        <icon src="config/android/res/drawable-mdpi/icon.png" density="mdpi"/>
        <icon src="config/android/res/drawable-hdpi/icon.png" density="hdpi"/>
        <icon src="config/android/res/drawable-xhdpi/icon.png" density="xhdpi"/>
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
